%p#notice= notice

%h1= @restaurant.name
%p
  %b Location:
  = @restaurant.location
%p
  %b Rating:
  = @restaurant.averageRating
  \|
  %b Price:
  = @restaurant.averagePrice
  \|
  %b Cuisine:
  = @restaurant.cuisine

%h2 Reviews
- @restaurant.reviews.each do |review|
  = link_to "#{review.user.username}", review.user
  \says
  %p stars: #{review.stars} | price: #{review.price}
  %p= review.content
  %br

%p
  %b= link_to 'Write a new review', new_review_path(:restaurant => @restaurant)


= link_to 'Edit', edit_restaurant_path(@restaurant)
\|
= link_to 'Back', restaurants_path

%h2 Buzz

- @tweets.each do |tweet|
  %blockquote.twitter-tweet{width: "250"}
    %p> #{tweet.text}
