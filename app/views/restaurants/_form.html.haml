= form_for @restaurant do |f|
  - if @restaurant.errors.any?
    #error_explanation
      %h2= "#{pluralize(@restaurant.errors.count, "error")} prohibited this restaurant from being saved:"
      %ul
        - @restaurant.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :averageRating
    = f.number_field :averageRating
  .field
    = f.label :averagePrice
    = f.number_field :averagePrice
  .field
    = f.label :reviews
    = f.text_area :reviews
  .field
    = f.label :cuisine
    = f.text_field :cuisine
  .actions
    = f.submit 'Save'
